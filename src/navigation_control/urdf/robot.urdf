<?xml version="1.0"?>
<robot name="omni_robot">
  
  <!-- 底盘 base_link -->
  <link name="base_link">
    <visual>
      <geometry>
        <!-- 长262mm 宽270mm -->
        <box size="0.262 0.270 0.050"/>
      </geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 0.8"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.262 0.270 0.050"/>
      </geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" 
               iyy="0.01" iyz="0.0" 
               izz="0.01"/>
    </inertial>
  </link>

  <!-- 激光雷达 laser -->
  <link name="laser">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.040"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.040"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.15"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" 
               iyy="0.0001" iyz="0.0" 
               izz="0.0001"/>
    </inertial>
  </link>

  <!-- 
    激光雷达关节：
    - 位置：向前 98mm (0.098m), 向左 65mm (0.065m)
    - 安装方式：雷达倒装（X轴朝后，Y轴朝右）
    - 旋转：绕Z轴旋转-90度（-π/2 = -1.5708 rad）使雷达X轴朝后对齐
  -->
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <!-- 
      xyz: 前(+X) 左(+Y) 上(+Z)
      rpy: 绕Z轴旋转-90度（270度）= -1.5708 rad
           使雷达X轴指向base_link的-X（后方）
           使雷达Y轴指向base_link的-Y（右侧）
    -->
    <origin xyz="0.098 0.065 0.077" rpy="0 0 3.1416"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- 虚拟轮子（用于可视化） -->
  
  <!-- 左前轮 -->
  <link name="wheel_left_front">
    <visual>
      <geometry>
        <cylinder radius="0.030" length="0.020"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="wheel_left_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_left_front"/>
    <origin xyz="0.081 0.125 0" rpy="0 0 0"/>
  </joint>

  <!-- 右前轮 -->
  <link name="wheel_right_front">
    <visual>
      <geometry>
        <cylinder radius="0.030" length="0.020"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="wheel_right_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_right_front"/>
    <origin xyz="0.081 -0.125 0" rpy="0 0 0"/>
  </joint>

  <!-- 左后轮 -->
  <link name="wheel_left_rear">
    <visual>
      <geometry>
        <cylinder radius="0.030" length="0.020"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="wheel_left_rear_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_left_rear"/>
    <origin xyz="-0.081 0.125 0" rpy="0 0 0"/>
  </joint>

  <!-- 右后轮 -->
  <link name="wheel_right_rear">
    <visual>
      <geometry>
        <cylinder radius="0.030" length="0.020"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="wheel_right_rear_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_right_rear"/>
    <origin xyz="-0.081 -0.125 0" rpy="0 0 0"/>
  </joint>

</robot>
